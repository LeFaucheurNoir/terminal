#tout est important
#pour l'utiliser il vous faut une version de python sur votre machine et un logiciel pour coder
#il vous suffiras de copier le code et de le coler dans le logiciel de codage avec le language python
import time

#pour les liens
site = "https://portalia-1.jimdosite.com/"
server_discord = "https://discord.io/Portaliafr"


#les personnes
player1 = "pseudo1"
player2 = "pseudo2"

#les mots de passes
good_password1 = ["mot de passe1"]
good_password2 = ["mot de passe2"]
exit_password = ["exit"]
password_ok = False
password_ok2 = True

#pour le terminal
terminal_name = "Portalia"
terminal_launched = True


#pour les commandes
user_command = ""

#le message de bienvenue
print("\
 /===========================================\\\n\
 |                                           |\n\
 |                Bienvenue !!!              |\n\
 |                                           |\n\
 \\===========================================/\n\
")
 

#la boucle
while not password_ok :
  password = input("Mot de passe : ")
  time.sleep(0.5)
  if password in good_password2:
    print("Accépté.")
    print("Bienvenue {}.".format(player2))
    password_ok = True
  elif password in good_password1:
       print("Accépté.")
       print("Bienvenue {}.".format(player1))
       password_ok = True
  elif password in exit_password :
    terminal_launched = False
    print("Vous quittez le termnial.")
  else:
    print("Refusé !!!")
   
#le help
def task_help():
     print("\
 /=================================================================\\\n\
 |               LISTE DES COMMANDES DISPONIBLES                   |\n\
 |help    : affiche les commandes disponibles                      |\n\
 |?       : affiche les commandes disponibles                      |\n\
 |quit    : ferme le terminal                                      |\n\
 |exit    : ferme le terminal                                      |\n\
 |site    : affiche le site et le discord                          |\n\
 |name    : choisis un nouveau nom pour le terminal                |\n\
 |lock    : verrouille le terminal code a refaire                  |\n\
 |update  : affiche les mises a jours                              |\n\
 \\=================================================================/\n\
")

#le exit
def task_exit():
    global terminal_launched
    terminal_launched = False


#le name qui ne marche pas encore
def task_name():
  global terminal_name
  terminal_name = input("Choisis un nouveau nom pour le terminal: ")

#le site et le serveur
def task_site():
  print("\
Le site du créateur est: {}\n\
le site ne sert pas que pour le code il sert aussi pour minecraft et roblox\n\
n'ésite pas a rejoindre le serveur minecraft".format(site))
  print("et le serveur discord ets : {}".format(server_discord))
  
 #pour une commande inconue
def task_unknown():
    print("Commande inconnue.")

def task_lock():
  password_ok2 = False
  while not password_ok2 :
    password2 = input("Mot de passe : ")
    time.sleep(0.5)
    if password2 in good_password1 :
      print("Accépté {}.".format(player1))
      password_ok2 = True
    elif password2 in good_password2 :
      print("Accépté {}.".format(player2))
      password_ok2 = True
    else :
      print("Refusé")

def task_update() :
  print("\
                              Mises a jours\n\
\n\
Ajouts de la commande lock, developpement de la commande exit dans les mots de passes,\n\
réparation en cours de la commande name te ajouts de la commande\n\
update.\n\
    ")



#le help pour la machine
dico_task = {
     'help'    : task_help,
     '?'       : task_help,
     'quit'    : task_exit,
     'exit'    : task_exit,
     'name'    : task_name,
     'site'    : task_site,
     'lock'    : task_lock,
     'update'  : task_update,
     }

#pour le terminal
while terminal_launched :
 user_command = input(f"[{terminal_name}]> ")
 dico_task.get(user_command, task_unknown)()


