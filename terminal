#tout est important
#pour l'utiliser il vous faut une version de python sur votre machine et un logiciel pour coder
#il vous suffiras de copier le code et de le coler dans le logiciel de codage avec le language python
import time

#pour les liens
site = "https://portalia-1.jimdosite.com/"
server_discord = "https://discord.io/Portaliafr"

#les personnes
player1 = "pseudo1"
player2 = "pseudo2"

#les mots de passes
good_password1 = ["mot de passe1"]
good_password2 = ["mot de passe2"]
password_ok = False

#pour le terminal
terminal_launched = True
terminal_name = "Portalia"

#pour les commandes
user_command = ""

#la boucle
while not password_ok:
  password = input("Mot de passe: ")
  time.sleep(0.5)
  if password in good_password2:
    print("Accépté.")
    print("Bienvenue {}.".format(player2))
    password_ok = True
  elif password in good_password1:
       print("Accépté.")
       print("Bienvenue {}.".format(player1))
       password_ok = True
  else:
    print("Refusé !!!")
   
#le help
def task_help():
     print("\
 /===========================================================\\\n\
 |         LISTE DES COMMANDES DISPONIBLES                   |\n\
 |help    : affiche les commandes disponibles                |\n\
 |?       : affiche les commandes disponibles                |\n\
 |quit    : ferme le terminal                                |\n\
 |quit    : ferme le terminal                                |\n\
 |site    : affiche le site et le discord                    |\n\
 |name    : choisis un nouveau nom pour le terminal(not work)|\n\
 \\===========================================================/\n\
")

#le exit
def task_exit():
    global terminal_launched
    terminal_launched = False


#le name qui ne marche pas encore
def task_name():
    terminal_name = input("Choisis un nouveau nom pour le terminal: ")

#le site et le serveur
def task_site():
  print("\
    Le site du créateur est: {}\n\
    le site ne sert pas que pour le code il sert aussi pour minecraft et roblox\n\
    n'ésite pas a rejoindre le serveur minecraft".format(site))
  print("    et le serveur discord ets : {}".format(server_discord))
  
 #pour une commande inconue
def task_unknown():
    print("Commande inconnue.")

#le help pour la machine
dico_task = {
     'help'    : task_help,
     '?'       : task_help,
     'quit'    : task_exit,
     'exit'    : task_exit,
     'name'    : task_name,
     'site'    : task_site,
     }

#pour le terminal
while terminal_launched :
 user_command = input(f"[{terminal_name}]> ")
 dico_task.get(user_command, task_unknown)()
